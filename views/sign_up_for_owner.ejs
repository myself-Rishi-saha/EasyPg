    <div class="inputbox" style="height: 90px;"><input type="text" placeholder="About Your Mess" name="AboutMess" id="AboutMess"></div>
    <div style="display: flex;"><div class="inputbox" style="width: 50%;"><input type="text" placeholder="Using Map for Your Mess , Tap a Location Button" name="Location" id="Location">
    </div>
    <img src="map-marker 1.png" alt="" srcset="" style="height: 30px; width: 30px; margin: 35px;">
    </div>

    <div style="display: flex; justify-content: center; width: 90vw; ">
        <div class="uploadphoto" style="width: 80%;" >
        <div class="upload__box" style="display: flex; justify-content: center; flex-direction: column;">
             <div class="upload__btn-box" style="display: flex; justify-content: center; align-items: center; white-space: nowrap; width: 100%; overflow: auto;">
