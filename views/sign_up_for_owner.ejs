            <label for="test7"></label><div class="checkboxtxt">Double Bed</div>
        </div>
        <div >
            <div class="checkboxicon"><img src="single-bed 1.png" alt="" srcset=""></div><input type="checkbox" id="test8" />
            <label for="test8"></label><div class="checkboxtxt">Single Bed</div>
        </div>
